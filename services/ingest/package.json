{
  "type": "module",
  "name": "ingest",
  "version": "0.1.0",
  "description": "Ingest service for PM events",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --watch src -e js --exec node src/server.js",
